generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  username String @unique
  password String
  Post     Post[]
}

model Post {
  id           String   @id @default(cuid())
  thumbnailUrl String?
  title        String   @unique
  content      String
  slug         String   @unique
  publishedOn  DateTime @default(now())
  author       User     @relation(fields: [userId], references: [id])
  userId       String
}
